{
  "compilerOptions": {           
  "target": "es2017",                                  
  "lib": [ "es2015", "dom" ],                                        
  "experimentalDecorators": true,                   
  "emitDecoratorMetadata": true,                    
  "module": "commonjs",                                
  "rootDir": "./src",  
  "sourceMap": true,                                 
  "typeRoots": [
    "./node_modules/@types",
    "./src/@types"
  ],                                                   
  "resolveJsonModule": true,                        
  "allowJs": true,                                 
  "outDir": "./dist",                                 
  "removeComments": true,                           
  "esModuleInterop": true,                            
  "forceConsistentCasingInFileNames": true,           
  "strict": false,                                      
  "skipLibCheck": true                                
}

}
